<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/touchsearch_popup_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/touchsearch_popup_content_textview"
        android:layout_width="match_parent" 
        android:layout_height="50dp"
        android:textSize="23dp"
        android:background="@drawable/oppo_touchsearch_popup_top_bg"
        android:visibility="visible"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:capitalize="characters"/>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        
        android:orientation="vertical"
        android:id="@+id/touchsearch_popup_content_name"
        android:background="@drawable/oppo_touchsearch_popup_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView 
            android:id="@+id/touchsearch_popup_content_textview1"
            android:layout_width="match_parent" 
            android:layout_height="@dimen/oppo_touchsearch_popupwin_sub_height"            
            android:gravity="center"
            android:textColor="#FFFFFFFF"/>
        
        <TextView 
            android:id="@+id/touchsearch_popup_content_textview2"
            android:layout_width="match_parent" 
            android:layout_height="@dimen/oppo_touchsearch_popupwin_sub_height"       
            android:gravity="center"
            android:textColor="#FFFFFFFF"/>
        
        <TextView 
            android:id="@+id/touchsearch_popup_content_textview3"
            android:layout_width="match_parent" 
            android:layout_height="@dimen/oppo_touchsearch_popupwin_sub_height"
            android:gravity="center"
            android:textColor="#FFFFFFFF"/>

        <TextView 
            android:id="@+id/touchsearch_popup_content_textview4"
            android:layout_width="match_parent" 
            android:layout_height="@dimen/oppo_touchsearch_popupwin_sub_height"
            android:gravity="center"
            android:textColor="#FFFFFFFF"/>

        <TextView 
            android:id="@+id/touchsearch_popup_content_textview5"
            android:layout_width="match_parent" 
            android:layout_height="@dimen/oppo_touchsearch_popupwin_sub_height"
            android:gravity="center"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>
        
</LinearLayout>
