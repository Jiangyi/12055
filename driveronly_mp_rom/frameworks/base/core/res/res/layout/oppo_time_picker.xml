<!-- Layout of time picker -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_width="230dip"
    android:background="@android:drawable/oppo_datepicker_full_bg"
    android:layout_height="193dip"
    android:padding="5dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip">

	<!-- AM / PM -->
    <com.oppo.widget.OppoNumberPicker
        android:id="@+id/amPm"
        android:layout_width="0dip"
        android:layout_height="wrap_content"

        android:focusable="true"
        android:layout_weight="6"
        android:background="@drawable/oppo_number_pick_1"
        android:focusableInTouchMode="true"
        />

    <!-- divider -->
    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
		android:visibility="invisible"
        />

    <!-- minute -->
    <com.oppo.widget.OppoNumberPicker
        android:id="@+id/hour"
        android:layout_width="0dip"
        android:layout_height="wrap_content"

        android:focusable="true"
        android:layout_weight="5"
        android:background="@drawable/oppo_number_pick_2"
        android:focusableInTouchMode="true"
        />

    <!-- AM / PM -->
    <com.oppo.widget.OppoNumberPicker
        android:id="@+id/minute"
        android:layout_width="0dip"
        android:layout_height="wrap_content"

        android:focusable="true"
        android:layout_weight="5"
        android:background="@drawable/oppo_number_pick_3"
        android:focusableInTouchMode="true"
        />

</LinearLayout>
