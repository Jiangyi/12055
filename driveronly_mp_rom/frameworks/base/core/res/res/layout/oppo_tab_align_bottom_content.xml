<com.oppo.widget.OppoTabHost xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/oppo_tabhost"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical">

	<FrameLayout 
		android:id="@+id/tabcontent"
		android:layout_width="match_parent" 
		android:layout_height="0dip"
		android:layout_weight="1">
	    <com.oppo.widget.OppoTabViewPager
	        android:id="@+id/viewpager"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />
	</FrameLayout>
        
	<com.oppo.widget.OppoTabWidget 
		android:id="@android:id/tabs"
		android:layout_width="match_parent"
		android:layout_height="0dip" 
		android:layout_gravity="bottom|center_horizontal"
		android:oppo_tabwidget_align_mode="bottom" 
		android:background="@*android:drawable/oppo_tab_widget_bg"
		android:soundEffectsEnabled="true"/>

</com.oppo.widget.OppoTabHost>

