<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/touchsearch_popup_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
    	android:id="@+id/touchsearch_popup_content_textview"
	    android:layout_width="match_parent" 
	    android:layout_height="match_parent"
	    android:visibility="visible"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:textSize="@dimen/oppo_touchsearch_popupwin_default_textsize"
	    android:textColor="@color/oppo_touchsearch_popupwin_default_textcolor"
	    android:capitalize="characters"/>
    
    <ImageView 
    	android:id="@+id/touchsearch_popup_content_imageview"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:layout_gravity="center"
	    android:src="@drawable/oppo_touchsearch_popup_search"/>
</FrameLayout>
