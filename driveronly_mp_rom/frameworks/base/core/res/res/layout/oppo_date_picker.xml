<?xml version="1.0" encoding="utf-8"?>


<!-- Layout of date picker-->

<!-- Warning: everything within the "pickers" layout is removed and re-ordered
     depending on the date format selected by the user.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dip"
    android:layout_height="204dip"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@android:drawable/oppo_datepicker_full_bg">

    <LinearLayout android:id="@+id/pickers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dip"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Month -->
        <com.oppo.widget.OppoNumberPicker
            android:id="@+id/month"
            android:layout_width="0dip"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:layout_weight="5"
            android:background="@drawable/oppo_number_pick_2"
            android:focusableInTouchMode="true"
            />

        <!-- Day -->
        <com.oppo.widget.OppoNumberPicker
            android:id="@+id/day"
            android:layout_width="0dip"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:layout_weight="5"
            android:background="@drawable/oppo_number_pick_3"
            android:focusableInTouchMode="true"
            />

        <!-- Year -->
        <com.oppo.widget.OppoNumberPicker
            android:id="@+id/year"
            android:layout_width="0dip"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:layout_weight="6"
            android:background="@drawable/oppo_number_pick_1"
            android:focusableInTouchMode="true"
            />

    </LinearLayout>

    <!-- calendar view -->
    <!--
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="280dip"
        android:layout_height="193dip"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
        -->

</LinearLayout>
