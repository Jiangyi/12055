    <style name="Theme.OPPO.GlobalSearchBar" parent="Theme.OPPO.Panel">
        <item name="windowContentOverlay">@null</item>
        <item name="actionModeBackground">@android:drawable/oppo_activity_title_bar</item>
        <item name="actionModeSplitBackground">@android:drawable/oppo_action_bar_bottom_background</item>
    </style>
  

    
    <style name="Theme.OPPO.IconMenu" parent="Theme.OPPO">
